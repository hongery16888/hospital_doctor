<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg">

    <include layout="@layout/patient_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/patient_top_bar_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/title_lefticon_width"
            android:layout_height="match_parent"
            android:src="@drawable/btn_back"
            android:scaleType="center"
            android:background="@drawable/bg_titlebar_action" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:layout_margin="@dimen/five_dip">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="医生"
                android:textColor="@color/patient_top_bar_bg"
                android:textSize="@dimen/global_title_size"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/global_padding"
                android:paddingRight="@dimen/global_padding"/>

            <View style="@style/divider_line_vertical" />

            <AutoCompleteTextView
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:textSize="@dimen/global_title_size"
                android:hint="请输入搜索内容"
                android:completionThreshold="1"
                android:dropDownHeight="match_parent"
                android:dropDownWidth="match_parent"
                android:layout_marginLeft="@dimen/global_padding"/>

        </LinearLayout>

        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/global_title_size"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/global_line_padding"
            android:paddingRight="@dimen/global_line_padding"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clear"
            style="@style/LayerMainMyItem">

            <TextView
                style="@style/TxtMainMyItem"
                android:text="清除记录"
                android:textColor="@color/patient_top_bar_bg"
                android:paddingLeft="30dip"/>

        </LinearLayout>

        <View style="@style/divider_line_horizontal" />

        <ListView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/global_bg"
            android:choiceMode="singleChoice"
            android:dividerHeight="@dimen/one_dip"
            android:background="@color/white"/>

    </LinearLayout>

    <ListView
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/global_bg"
        android:choiceMode="singleChoice"
        android:dividerHeight="@dimen/one_dip"
        android:background="@color/white"/>

</LinearLayout>
