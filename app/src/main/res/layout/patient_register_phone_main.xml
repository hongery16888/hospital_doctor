<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg">

    <include layout="@layout/patient_title_bar" />

    <View style="@style/divider_line_horizontal"
        android:layout_marginTop="@dimen/global_line_padding"/>

    <LinearLayout
        style="@style/LayerMainMyItem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_padding"
            android:background="@color/transparent"
            android:text="@string/doctor_register_name"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:drawableLeft="@drawable/icon_register_tel"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_line_padding"
            android:background="@color/transparent"
            android:text="18190770373"
            android:hint="@string/phone_hint"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"
        android:layout_marginLeft="@dimen/global_btn_padding"
        android:layout_marginRight="@dimen/global_btn_padding"/>

    <LinearLayout
        style="@style/LayerMainMyItem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_padding"
            android:background="@color/transparent"
            android:text="@string/doctor_register_password"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:drawableLeft="@drawable/icon_register_pwd"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_line_padding"
            android:background="@color/transparent"
            android:text="000"
            android:hint="@string/register_phone_hint"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:password="true"/>

    </LinearLayout>

    <View style="@style/divider_line_horizontal"
        android:layout_marginLeft="@dimen/global_btn_padding"
        android:layout_marginRight="@dimen/global_btn_padding"/>

    <LinearLayout
        style="@style/LayerMainMyItem">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_padding"
            android:background="@color/transparent"
            android:text="@string/doctor_register_name"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:drawableLeft="@drawable/icon_register_pwd"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_line_padding"
            android:background="@color/transparent"
            android:text="000"
            android:hint="@string/register_phone_hint_again"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:password="true"/>

    </LinearLayout>

    <View style="@style/divider_line_horizontal"
        android:layout_marginLeft="@dimen/global_btn_padding"
        android:layout_marginRight="@dimen/global_btn_padding"/>

    <LinearLayout
        style="@style/LayerMainMyItem">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/global_line_padding"
            android:drawablePadding="@dimen/global_padding"
            android:background="@color/transparent"
            android:text="@string/doctor_register_check"
            android:textColor="@color/black_color"
            android:textSize="@dimen/global_title_size"
            android:drawableLeft="@drawable/icon_register_yz"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginRight="@dimen/global_btn_padding"
                android:background="@drawable/btn_white"
                android:text="@string/doctor_register_get_verify"
                android:textColor="@color/black_color"
                android:textSize="@dimen/global_title_size" />

        </LinearLayout>

    </LinearLayout>

    <View style="@style/divider_line_horizontal" />

    <TextView
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/global_label"
        android:padding="@dimen/global_padding"
        android:background="@drawable/blgl_green_button_selector"
        android:layout_margin="@dimen/global_btn_padding"
        android:gravity="center" />

</LinearLayout>
