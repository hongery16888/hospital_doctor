<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector_item_blue_color">

    <LinearLayout style="@style/LayerMainMyItem"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/head"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/img_avater_blgl_head"
            android:layout_marginTop="@dimen/five_dip"
            android:layout_marginBottom="@dimen/five_dip"/>

        <TextView
            android:id="@+id/name"
            style="@style/TxtMainMyItem"
            android:text="@string/blgl_item_name"
            android:textColor="@color/top_bar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/global_padding"/>


        <TextView
            android:id="@+id/time"
            style="@style/TxtMainMyItem"
            android:text="@string/blgl_item_time"
            android:textColor="@color/global_sub_title_color"
            android:gravity="right"/>

        <ImageView
            android:id="@+id/del"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/btn_delete"
            android:paddingLeft="@dimen/global_padding"/>

    </LinearLayout>

    <View style="@style/divider_line_horizontal" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doctor_circle_item_content"
        android:textSize="@dimen/global_title_size"
        android:textColor="@color/global_title_color"
        android:paddingLeft="@dimen/global_padding"
        android:paddingRight="@dimen/global_padding"
        android:paddingTop="@dimen/global_line_padding"
        android:paddingBottom="@dimen/global_line_padding" />

    <View style="@style/divider_line_horizontal" />

    <LinearLayout style="@style/LayerMainMyItem"
        android:background="@color/transparent">

        <TextView style="@style/TxtMainMyItem"
            android:text="@string/yygl_item_time"
            android:textColor="@color/top_bar_bg"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView style="@style/TxtMainMyItem"
            android:text="@string/yygl_item_time"
            android:textColor="@color/top_bar_bg"
            android:layout_weight="1"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/best"
            style="@style/TxtMainMyItem"
            android:text="@string/doctor_circle_item_count"
            android:textColor="@color/grey_deep"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_zan"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/commentnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor_circle_item_count"
                android:textColor="@color/grey_deep"
                android:textSize="@dimen/global_title_size"
                android:paddingRight="@dimen/global_line_padding"
                android:drawableLeft="@drawable/icon_comment"
                android:drawablePadding="@dimen/global_padding"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
