<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/img_fj_hospital"
        android:layout_margin="@dimen/global_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_fj_item_yy_name"
                    android:textColor="@color/patient_top_bar_bg"
                    android:textSize="@dimen/patient_fj_item_name"
                    android:padding="@dimen/global_padding"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/global_line_padding"
                android:gravity="right">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/patient_fj_item_distance"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/global_sub_title_size"
                    android:drawableLeft="@drawable/icon_location"
                    android:drawablePadding="@dimen/five_dip"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_yy_type"
                        android:paddingLeft="@dimen/global_padding"
                        android:textColor="@color/grey_deep"/>

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_yy_type_ex"
                        android:textColor="@color/global_title_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/five_dip"
                    android:paddingRight="@dimen/global_line_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_yy_adds"
                        android:textColor="@color/grey_deep"
                        android:paddingLeft="@dimen/global_padding"/>

                    <TextView
                        android:id="@+id/adds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_yy_adds_ex"
                        android:textColor="@color/global_title_color"
                        android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
