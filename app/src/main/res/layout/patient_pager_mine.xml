<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/patient_top_bar_bg"
       android:gravity="center_horizontal"
       android:paddingBottom="@dimen/global_line_padding"
       android:paddingTop="@dimen/global_line_padding"
       android:orientation="vertical">

       <ImageView
           android:id="@+id/head"
           android:layout_width="100dip"
           android:layout_height="100dip"
           android:src="@drawable/img_avater_register"/>

       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/doctor_personal_name"
           android:textColor="@color/white"
           android:textSize="@dimen/global_title_size"
           android:gravity="center_horizontal"
           android:paddingTop="@dimen/global_padding"/>

   </LinearLayout>

    <LinearLayout
        style="@style/LayerMainMyItem"
        android:background="@color/patient_top_bar_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

        <LinearLayout
            android:id="@+id/wddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/global_padding"
            android:paddingBottom="@dimen/global_padding"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_titlebar_action">
            <TextView
                android:id="@+id/order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_mine_wddd_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/patient_fj_doctor_price"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_mine_wddd"
                android:textColor="@color/white"
                android:textSize="@dimen/global_third_title_size"/>
        </LinearLayout>

        <View style="@style/divider_line_vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/global_padding"
            android:layout_marginBottom="@dimen/global_padding"/>

        <LinearLayout
            android:id="@+id/wdyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/global_padding"
            android:paddingBottom="@dimen/global_padding"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_titlebar_action">
            <TextView
                android:id="@+id/yuyue_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_mine_wdyy_ex"
                android:textColor="@color/white"
                android:textSize="@dimen/patient_fj_doctor_price"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_mine_wdyy"
                android:textColor="@color/white"
                android:textSize="@dimen/global_third_title_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.2" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"/>

    <View style="@style/divider_line_horizontal"
        android:layout_marginTop="@dimen/global_line_padding"/>

    <LinearLayout style="@style/LayerMainMyItem">

        <TextView
            android:id="@+id/zhzx"
            style="@style/TxtMainMyItem"
            android:text="@string/patient_mine_zhzx"
            android:textColor="@color/global_title_color"
            android:drawableLeft="@drawable/icon_wo_zhzx"/>

        <ImageView style="@style/ImageMainMyItemNext" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"/>

    <LinearLayout style="@style/LayerMainMyItem">

        <TextView
            android:id="@+id/wdsc"
            style="@style/TxtMainMyItem"
            android:text="@string/patient_mine_wdsc"
            android:textColor="@color/global_title_color"
            android:drawableLeft="@drawable/icon_wo_wdsc"/>

        <ImageView style="@style/ImageMainMyItemNext" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"/>

    <LinearLayout style="@style/LayerMainMyItem">

        <TextView
            android:id="@+id/wdfb"
            style="@style/TxtMainMyItem"
            android:text="@string/patient_mine_wdfb"
            android:textColor="@color/global_title_color"
            android:drawableLeft="@drawable/icon_wo_wdfb"/>

        <ImageView style="@style/ImageMainMyItemNext" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"/>

    <View style="@style/divider_line_horizontal"
        android:layout_marginTop="@dimen/global_line_padding"/>

    <LinearLayout
        android:id="@+id/wdzl"
        style="@style/LayerMainMyItem">

        <TextView style="@style/TxtMainMyItem"
            android:text="@string/patient_mine_wdzl"
            android:textColor="@color/global_title_color"
            android:drawableLeft="@drawable/icon_wo_wdzl"/>

        <ImageView style="@style/ImageMainMyItemNext" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal"/>

</LinearLayout>
