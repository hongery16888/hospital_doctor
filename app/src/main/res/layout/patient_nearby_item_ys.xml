<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/head"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/img_fj_doctor"
        android:layout_margin="@dimen/global_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_fj_item_name"
                    android:textColor="@color/patient_top_bar_bg"
                    android:textSize="@dimen/patient_fj_item_name"
                    android:padding="@dimen/global_padding"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:paddingRight="@dimen/global_line_padding"
                android:gravity="right">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/patient_fj_item_distance"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/global_sub_title_size"
                    android:drawableLeft="@drawable/icon_location"
                    android:drawablePadding="@dimen/five_dip"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_zl"
                        android:textColor="@color/grey_deep"
                        android:paddingLeft="@dimen/global_padding"/>

                    <TextView
                        android:id="@+id/zili"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_zl_ex"
                        android:textColor="@color/global_title_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/five_dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_jg"
                        android:textColor="@color/grey_deep"
                        android:paddingLeft="@dimen/global_padding"/>

                    <TextView
                        android:id="@+id/adds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_jg_ex"
                        android:textColor="@color/global_title_color"
                        android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/five_dip"
                    android:paddingBottom="@dimen/global_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_sc"
                        android:textColor="@color/grey_deep"
                        android:paddingLeft="@dimen/global_padding"/>

                    <TextView
                        android:id="@+id/skill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_fj_item_sc_ex"
                        android:textColor="@color/global_title_color"
                        android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:src="@drawable/patient_fj_item_zx"/>

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patient_fj_item_online"
                    android:textColor="@color/grey_deep"
                    android:textSize="@dimen/patient_fj_item_zx"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
