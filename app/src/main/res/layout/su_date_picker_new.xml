<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="220dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <iori.hdoctor.view.ScrollerNumberPicker
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        su:itemNumber="5"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/patient_top_bar_bg"
        su:selecredTextSize="22sp"
        su:unitHight="48dp" />

    <iori.hdoctor.view.ScrollerNumberPicker
        android:id="@+id/month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        su:itemNumber="5"
        su:lineColor="#7e000000"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/patient_top_bar_bg"
        su:selecredTextSize="22sp"
        su:unitHight="48dp" />

    <iori.hdoctor.view.ScrollerNumberPicker
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        su:itemNumber="5"
        su:lineColor="#7e000000"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/patient_top_bar_bg"
        su:selecredTextSize="22sp"
        su:unitHight="48dp" />


</LinearLayout>