<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_jk_top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_jk_ball"
            android:gravity="center">

            <TextView
                android:text="@string/patient_jk_zxkf"
                android:textColor="@color/white"
                android:textSize="@dimen/global_title_size"
                android:drawableTop="@drawable/icon_jk_zxzx"
                android:drawablePadding="@dimen/five_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/zwzd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_zwzd"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jk_zwzd"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View style="@style/divider_line_vertical" />

        <LinearLayout
            android:id="@+id/fxbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_fxbg"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jk_fxbg"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View style="@style/divider_line_vertical" />

        <LinearLayout
            android:id="@+id/jkda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_jkda"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jk_jkda"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/jktx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_jktx"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jk_jktx"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View style="@style/divider_line_vertical" />

        <LinearLayout
            android:id="@+id/wdyx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_wdyx"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jkyx"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <View style="@style/divider_line_vertical" />

        <LinearLayout
            android:id="@+id/fjys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/global_line_padding"
            android:paddingBottom="@dimen/global_line_padding"
            android:background="@drawable/bg_titlebar_action">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_jk_fjys"
                android:textColor="@color/global_title_color"
                android:drawableTop="@drawable/icon_jk_fjys"
                android:drawablePadding="@dimen/five_dip"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
