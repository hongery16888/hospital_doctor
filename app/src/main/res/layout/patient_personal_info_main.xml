<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg"
    android:id="@+id/persion_main">

    <include layout="@layout/patient_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head_img"
                style="@style/LayerMainMyItem"
                android:paddingTop="@dimen/global_padding"
                android:paddingBottom="@dimen/global_padding">
                <ImageView
                    android:id="@+id/head"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_avater_grzx" />

                <TextView style="@style/TxtMainMyItem"
                    android:text="@string/patient_personal_info__avater"
                    android:textColor="@color/grey_deep"
                    android:gravity="right"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext" />
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <LinearLayout style="@style/LayerMainMyItem">
                <TextView style="@style/TxtMainMyItem"
                    android:layout_weight="0.4"
                    android:text="@string/patient_personal_info_nickname"
                    android:textColor="@color/global_title_color"
                    android:focusable="true"
                    android:focusableInTouchMode="true"/>

                <EditText
                    android:background="@color/transparent"
                    android:id="@+id/name"
                    style="@style/TxtMainMyItem"
                    android:gravity="right"
                    android:textColor="@color/grey_deep"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext" />
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <LinearLayout style="@style/LayerMainMyItem">
                <TextView style="@style/TxtMainMyItem"
                    android:layout_weight="0.4"
                    android:text="@string/patient_personal_info_sex"
                    android:textColor="@color/global_title_color"/>

                <EditText
                    android:background="@color/transparent"
                    android:id="@+id/sex"
                    style="@style/TxtMainMyItem"
                    android:gravity="right"
                    android:textColor="@color/grey_deep"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext" />
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <LinearLayout style="@style/LayerMainMyItem">
                <TextView style="@style/TxtMainMyItem"
                    android:layout_weight="0.4"
                    android:text="@string/patient_personal_info_age"
                    android:textColor="@color/global_title_color"/>

                <EditText
                    android:background="@color/transparent"
                    android:id="@+id/age"
                    style="@style/TxtMainMyItem"
                    android:numeric="integer"
                    android:gravity="right"
                    android:textColor="@color/grey_deep"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext" />
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <LinearLayout style="@style/LayerMainMyItem">
                <TextView style="@style/TxtMainMyItem"
                    android:layout_weight="0.4"
                    android:text="@string/patient_personal_info_adds"
                    android:textColor="@color/global_title_color"/>

                <EditText
                    android:background="@color/transparent"
                    android:id="@+id/adds"
                    style="@style/TxtMainMyItem"
                    android:gravity="right"
                    android:textColor="@color/grey_deep"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext" />
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <LinearLayout style="@style/LayerMainMyItem"
                android:visibility="gone">
                <TextView style="@style/TxtMainMyItem"
                    android:layout_weight="0.4"
                    android:text="@string/patient_personal_info_phone"
                    android:textColor="@color/global_title_color"/>

                <TextView style="@style/TxtMainMyItem"
                    android:gravity="right"
                    android:textColor="@color/grey_deep"
                    android:paddingRight="@dimen/global_padding"/>

                <ImageView style="@style/ImageMainMyItemNext"
                    android:visibility="invisible"/>
            </LinearLayout>

            <View style="@style/divider_line_horizontal" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/patient_personal_info_save"
                android:textColor="@color/white"
                android:textSize="@dimen/global_label"
                android:padding="@dimen/global_padding"
                android:background="@drawable/blgl_green_button_selector"
                android:layout_marginTop="@dimen/global_btn_padding"
                android:layout_marginLeft="@dimen/global_btn_padding"
                android:layout_marginRight="@dimen/global_btn_padding"
                android:layout_marginBottom="@dimen/global_padding"
                android:gravity="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
