<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_avater_blgl_head"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingBottom="@dimen/global_padding"
        android:paddingTop="@dimen/global_padding"
        android:paddingRight="@dimen/global_padding"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center_vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/blgl_item_name"
               android:textColor="@color/grey_deep"
               android:textSize="@dimen/global_title_size"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/doctor_circle_info_reply_content"
               android:textColor="@color/global_title_color"
               android:textSize="@dimen/global_title_size"
               android:paddingTop="@dimen/five_dip"/>

       </LinearLayout>


        <TextView style="@style/TxtMainMyItem"
            android:layout_height="match_parent"
            android:text="@string/doctor_circle_info_reply_time"
            android:textColor="@color/grey_deep"
            android:gravity="center"/>

</LinearLayout>
