<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/head"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_marginBottom="@dimen/global_padding"
        android:layout_marginLeft="@dimen/global_line_padding"
        android:layout_marginRight="@dimen/global_padding"
        android:layout_marginTop="@dimen/global_padding"
        android:src="@drawable/img_avater_blgl_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/five_dip"
            android:paddingRight="@dimen/global_padding">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/blgl_item_name"
                android:textColor="@color/grey_deep"
                android:textSize="@dimen/global_title_size" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/doctor_circle_info_reply_time"
                android:textColor="@color/grey_deep"
                android:textSize="@dimen/global_title_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/five_dip"
            android:text="asdfasdfasdfadfasdfasdfadsfasdfasdfadfasdfasdfasdf"
            android:textColor="@color/global_title_color"
            android:textSize="@dimen/global_title_size"
            android:paddingBottom="@dimen/five_dip"/>

    </LinearLayout>

</LinearLayout>
