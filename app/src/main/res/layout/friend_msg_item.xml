<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某"
        android:paddingTop="@dimen/global_line_padding"
        android:paddingBottom="@dimen/global_line_padding"
        android:paddingLeft="@dimen/global_padding"
        android:textColor="@color/global_title_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/global_title_color"
        android:paddingRight="@dimen/global_padding"
        android:text="添加你为好友"/>

    <TextView
        android:id="@+id/agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同意"
        android:textColor="@color/global_title_color"
        android:paddingTop="@dimen/global_padding"
        android:paddingBottom="@dimen/global_padding"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_line_padding"
        android:layout_marginRight="@dimen/global_padding"
        android:background="@drawable/cz_but_01"/>

    <TextView
        android:id="@+id/refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝"
        android:textColor="@color/global_title_color"
        android:paddingTop="@dimen/global_padding"
        android:paddingBottom="@dimen/global_padding"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_line_padding"
        android:layout_marginRight="@dimen/global_padding"
        android:background="@drawable/cz_but_01"/>

</LinearLayout>
