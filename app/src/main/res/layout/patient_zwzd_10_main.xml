<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical">

    <include layout="@layout/patient_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/patient_zwzd_unit_top"
        android:paddingBottom="@dimen/patient_zwzd_unit_bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/patient_zwzd_piss_forced"
            android:textColor="@color/global_title_color"
            android:textSize="@dimen/patient_zwzd_tz_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/patient_zwzd_sit_ball"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_zwzd_piss_unit_ex"
            android:textSize="@dimen/patient_zwzd_tz_size"
            android:textColor="@color/patient_top_bar_bg"/>

        <TextView
            android:id="@+id/odds_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_zwzd_piss_unit_little_more"
            android:textSize="@dimen/global_title_size"
            android:textColor="@color/patient_top_bar_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/patient_zwzd_unit_bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_piss_unit_ex_0"
            android:textColor="@color/grey"
            android:textSize="@dimen/patient_zwzd_odds_size"
            android:paddingLeft="@dimen/global_line_padding"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_piss_unit_ex_50"
            android:textColor="@color/grey"
            android:textSize="@dimen/global_title_size"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_piss_unit_ex_100"
            android:textColor="@color/grey"
            android:textSize="@dimen/global_title_size"
            android:paddingRight="@dimen/global_line_padding"
            android:gravity="right"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        style="@style/Widget.SeekBar.Normal"
        android:layout_margin="@dimen/global_padding"
        android:paddingLeft="@dimen/global_padding"
        android:paddingRight="@dimen/global_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_piss_never"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size"
            android:paddingLeft="@dimen/global_line_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_piss_every"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size"
            android:paddingRight="@dimen/global_line_padding"
            android:gravity="right"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/patient_zwzd_piss_forced_prompt"
        android:textSize="@dimen/global_sub_title_size"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/patient_zwzd_sr_top"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_line_padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom">

        <TextView
            android:id="@+id/last_step"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_last_step"
            android:textColor="@color/white"
            android:textSize="@dimen/global_title_size"
            android:background="@color/patient_bottom_last_step_bg"
            android:gravity="center"/>

        <TextView
            android:id="@+id/next_step"
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_h"
            android:layout_weight="1"
            android:text="@string/patient_zwzd_next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/global_title_size"
            android:background="@color/patient_top_bar_bg"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
