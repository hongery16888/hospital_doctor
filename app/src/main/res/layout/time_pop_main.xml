<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/outside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <iori.hdoctor.view.ScrollerNumberPicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="@android:color/white"
            su:itemNumber="5"
            su:lineColor="#7e000000"
            su:maskHight="32dp"
            su:noEmpty="true"
            su:normalTextColor="#777"
            su:normalTextSize="14sp"
            su:selecredTextColor="@color/patient_top_bar_bg"
            su:selecredTextSize="22sp"
            su:unitHight="48dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="取消"
                android:textColor="@color/global_title_color"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:padding="10dip"
                android:tag="birthday"
                android:text="确定"
                android:textColor="@color/global_title_color"
                android:textSize="20dip" />

        </RelativeLayout>

    </FrameLayout>


</LinearLayout>
