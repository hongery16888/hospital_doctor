<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_h"
    android:gravity="center_vertical"
    android:background="@color/top_bar_bg">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="@dimen/title_lefticon_width"
        android:layout_height="match_parent"
        android:src="@drawable/btn_back"
        android:scaleType="center"
        android:background="@drawable/bg_titlebar_action" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/mid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/mid_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/mid_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab2_left_hl"
            android:text="@string/doctor_circle_info_friend"
            android:textColor="@color/global_title_color"
            android:textSize="@dimen/global_title_size"
            android:gravity="center"/>

        <TextView
            android:id="@+id/mid_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab2_blue_right"
            android:text="@string/doctor_circle_info_doctor"
            android:textColor="@color/white"
            android:textSize="@dimen/global_title_size"
            android:gravity="center"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_bar_default_margin"
            android:paddingRight="@dimen/title_bar_img_margin_outside"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/register_size"
            android:background="@drawable/bg_titlebar_action"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/title_bar_default_margin"
            android:paddingRight="@dimen/title_bar_img_margin_outside"
            android:gravity="center_vertical"
            android:background="@drawable/bg_titlebar_action"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>
