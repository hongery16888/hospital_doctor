<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <View
        style="@style/divider_line_horizontal"
        android:layout_marginTop="@dimen/global_padding" />

    <LinearLayout style="@style/LayerMainMyItem">

        <TextView
            style="@style/TxtMainMyItem"
            android:layout_weight="2"
            android:drawableLeft="@drawable/img_avater_blgl_head"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/global_padding"
            android:text="@string/blgl_item_name"
            android:textColor="@color/top_bar_bg" />

        <TextView
            style="@style/TxtMainMyItem"
            android:gravity="center_horizontal"
            android:text="@string/blgl_item_sex"
            android:textColor="@color/global_sub_title_color" />

        <TextView
            style="@style/TxtMainMyItem"
            android:gravity="center_horizontal"
            android:text="@string/blgl_item_age"
            android:textColor="@color/global_sub_title_color" />

        <TextView
            style="@style/TxtMainMyItem"
            android:gravity="center_horizontal"
            android:text="@string/blgl_item_time"
            android:textColor="@color/global_sub_title_color" />

    </LinearLayout>

    <View style="@style/divider_line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_padding"
            android:background="@drawable/blgl_info_head_fuzzy"
            android:src="@drawable/blgl_info_head" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_line_padding"
        android:paddingTop="@dimen/global_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blgl_item_illness"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/blgl_item_illness_ex"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_line_padding"
        android:paddingTop="@dimen/global_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blgl_item_description"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/blgl_item_description_ex"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/global_line_padding"
        android:paddingRight="@dimen/global_btn_padding"
        android:paddingTop="@dimen/global_padding"
        android:paddingBottom="@dimen/global_line_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blgl_item_reserve_type"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/blgl_item_pay"
            android:textColor="@color/grey_deep"
            android:textSize="@dimen/global_title_size"
            android:gravity="right"
            android:paddingRight="@dimen/global_padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/blgl_item_reserve_price"
            android:textColor="@color/red"
            android:textSize="@dimen/global_title_size"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/global_line_padding">

        <TextView
            android:id="@+id/doctor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/blgl_info_data"
            android:textColor="@color/white"
            android:textSize="@dimen/global_label"
            android:padding="@dimen/global_padding"
            android:layout_marginRight="@dimen/global_padding"
            android:background="@drawable/blgl_green_button_selector"
            android:gravity="center" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/blgl_info_reply"
            android:textColor="@color/white"
            android:textSize="@dimen/global_label"
            android:padding="@dimen/global_padding"
            android:layout_marginLeft="@dimen/global_padding"
            android:background="@drawable/blgl_orange_button_selector"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
