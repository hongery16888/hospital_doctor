<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="textviewstyle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#00FF00</item>
		<item name="android:background">#FF0000</item>
	</style>

	<style name="DefaultTheme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:colorForeground">#000000</item>
		<item name="android:windowFrame">@null</item>
	</style>

	<style name="dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item><!--边框-->
		<item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
		<item name="android:windowIsTranslucent">true</item><!--半透明-->
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">true</item><!--模糊-->
	</style>
	
	<!-- load progress -->
    <style name="ProgressLoad">
       <item name="android:indeterminateDrawable">@drawable/anim_progress_load</item>
	　　<item name="android:minWidth">48dip</item>
	　　<item name="android:maxWidth">48dip</item>
	　　<item name="android:minHeight">48dip</item>
	　　<item name="android:maxHeight">48dip</item>
    </style>
	
	 <!-- 自定义进度对话框 -->
    <style name="CustomProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

	<style name="theme.translucent" parent="android:style/Theme.Translucent">
		<item name="android:windowNoTitle">true</item>
		<item name="android:colorForeground">#c0c0c0ff</item>
	</style>

	<style name="PopupAnimation" parent="android:Animation">
		<item name="android:windowEnterAnimation">@anim/right_fade_in</item>
		<item name="android:windowExitAnimation">@anim/right_fade_out</item>
	</style>

	<style name="main_tab_bottom">
		<item name="android:gravity">center</item>
		<item name="android:background">#00000000</item>
		<item name="android:paddingTop">2.0dip</item>
		<item name="android:paddingBottom">4.0dip</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:button">@null</item>
		<item name="android:drawablePadding">2.0dip</item>
		<item name="android:layout_weight">1.0</item>
	</style>

	<style name="divider_line_horizontal">
		<item name="android:background">#dcdcdc</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">1px</item>
	</style>

	<style name="divider_line_vertical">
		<item name="android:background">#dcdcdc</item>
		<item name="android:layout_width">1px</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:paddingTop">3dip</item>
		<item name="android:paddingBottom">3dip</item>
	</style>

	<style name="LayerMainMyItem">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:background">@drawable/selector_item</item>
		<item name="android:paddingLeft">@dimen/global_padding</item>
		<item name="android:paddingRight">@dimen/global_padding</item>
	</style>

	<style name="TxtMainMyItem">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:singleLine">true</item>
		<item name="android:textColor">@color/global_title_color</item>
		<item name="android:textSize">@dimen/global_title_size</item>
		<item name="android:drawablePadding">@dimen/global_padding</item>
		<item name="android:paddingTop">@dimen/global_padding</item>
		<item name="android:paddingBottom">@dimen/global_padding</item>
	</style>

	<style name="ImageMainMyItemNext">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:src">@drawable/more</item>
	</style>

	<style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
		<item name="android:maxHeight">8.0dip</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
		<item name="android:progressDrawable">@drawable/seek_bar_piss_bg</item>
		<item name="android:minHeight">8.0dip</item>
		<item name="android:thumb">@drawable/thumb_custom_bar</item>
		<item name="android:thumbOffset">10.0dip</item>
	</style>

	<style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="android:button">@null</item>
		<item name="android:background">@drawable/zwzd_selector</item>
		<item name="android:paddingLeft">@dimen/patient_zwzd_check_padding</item>
		<item name="android:textColor">@color/global_title_color</item>
		<item name="android:textSize">@dimen/global_sub_title_size</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="CalendarCard">

	</style>

	<style name="CalendarCard.Root">
		<item name="android:padding">0dp</item>
	</style>

	<style name="CalendarCard.Day">
		<item name="android:paddingBottom">5dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:gravity">center</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="CalendarCard.Days">
		<item name="android:padding">0dp</item>
	</style>

	<style name="CalendarCard.Title">
		<item name="android:padding">5dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="CalendarCard.Grid">
		<item name="android:background">@drawable/card_grid_bg</item>
		<item name="android:paddingRight">1dp</item>
		<item name="android:paddingBottom">1dp</item>
	</style>

	<style name="CalendarCard.Cell">
		<item name="android:background">@drawable/card_item_bg</item>
		<item name="android:layout_marginLeft">1dp</item>
		<item name="android:layout_marginTop">1dp</item>
	</style>

	<style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
		<item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
		<item name="android:minHeight">20dp</item>
		<item name="android:maxHeight">20dp</item>
	</style>

	<style name="mypopwindow_anim_style">
		<item name="android:windowEnterAnimation">@anim/pop_show</item>
		<!-- 指定显示的动画xml -->
		<item name="android:windowExitAnimation">@anim/pop_hide</item>
		<!-- 指定消失的动画xml -->
	</style>
</resources>
